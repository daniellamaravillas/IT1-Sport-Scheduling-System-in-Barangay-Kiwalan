<?php
ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

include 'db.php';
include 'navigation.php';

$clientID = $_GET['id'] ?? 0;

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $clientID = $_POST['clientID'] ?? 0;
    $clients_name = $_POST['clients_name'] ?? '';
    $contact_number = $_POST['contact_number'] ?? '';
    $location = $_POST['location'] ?? '';

    $update_sql = "UPDATE Clients SET clients_name = ?, contact_number = ?, location = ? WHERE ClientID = ?";
    $update_stmt = $conn->prepare($update_sql);
    $update_stmt->bind_param("sssi", $clients_name, $contact_number, $location, $clientID);
    if ($update_stmt->execute()) {
        header("Location: client.php");
        exit();
    } else {
        echo "Error: " . $update_stmt->error;
    }
}

$sql = "SELECT clients_name, contact_number, location FROM Clients WHERE ClientID = ?";
$stmt = $conn->prepare($sql);
$stmt->bind_param("i", $clientID);
$stmt->execute();
$result = $stmt->get_result();
$client = $result->fetch_assoc();

if (!$client) {
    echo "Client not found.";
    exit();
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Client</title>
    <link rel="stylesheet" type="text/css" href="homes.css">
    <style>
        .container {
            width: 100%;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            font-size: 1rem;
        }
        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Edit Client</h2>
    <form action="edit_client.php?id=<?= $clientID ?>" method="POST">
        <input type="hidden" name="clientID" value="<?= $clientID ?>">
        <div class="mb-3">
            <label for="clients_name" class="form-label">Name</label>
            <input type="text" name="clients_name" class="form-control" value="<?= $client['clients_name'] ?>" required>
        </div>
        <div class="mb-3">
            <label for="contact_number" class="form-label">Contact Number</label>
            <input type="text" name="contact_number" class="form-control" value="<?= $client['contact_number'] ?>" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" class="form-control" value="<?= $client['location'] ?>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Client</button>
    </form>
</div>
</body>
</html>
<?php
$conn->close();
?>